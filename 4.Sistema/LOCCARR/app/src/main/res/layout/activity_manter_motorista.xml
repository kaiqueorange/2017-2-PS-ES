<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="br.com.flores.marcio.loccarr.ManterMotorista">

    <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Cadastrar\nMotorista"
    android:background="@color/colorPrimary"
    android:textColor="@color/colorWhite"
    android:textSize="20dp"
    android:padding="5dp"
        android:onClick="cadastrarMotorista"
    android:id="@+id/cadastrarMotorista"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Excluir\nMotorista"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorWhite"
        android:textSize="20dp"
        android:padding="5dp"
        android:onClick="excluirMotorista"
        android:id="@+id/excluirMotorista"
        android:layout_alignParentRight="true"/>

</RelativeLayout>
